	.z80

	include	FCSLIB.INC

	public	?DEC24

	cseg

; Decrement 24-bit value in BHL

?DEC24:	ld	a,l
	dec	l
	or	a
	ret	nz
	ld	a,h
	dec	h
	or	a
	ret	nz
	dec	b
	ret

	end
